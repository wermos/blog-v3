{
  "name": "astro-erudite",
  "type": "module",
  "version": "1.6.2",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "build": "astro check && astro build && npm run postbuild ",
    "postbuild": "pagefind --site dist/",
    "preview": "astro preview",
    "check": "cspell \"**/*.{md,mdx,js,ts,jsx,tsx,astro}\"",
    "fix": "npm run format",
    "format": "prettier . --write",
    "postinstall": "patch-package"
  },
