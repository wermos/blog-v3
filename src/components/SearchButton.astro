---
export interface Props {
  readonly id?: string;
  readonly className?: string;
}

const { id, className } = Astro.props;
---

<a
  id={id}
  class:list={[className, "search-button"]}
  href={`${import.meta.env.BASE_URL}search`}
  aria-label="Search"
>
  üîç
</a>

<style>
.search-button {
  text-decoration: none;
  background: none;
  border: none;
  cursor: pointer;
  font-size: 1.25rem;
  padding: 0.25rem;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  color: inherit;
  transition: color 0.2s ease-in-out;
}

.search-button:hover {
  color: #1f2937; /* optional hover color */
}
</style>
