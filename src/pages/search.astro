---
import Layout from "@/layouts/Layout.astro";
---

<Layout>
  <div class="w-full max-w-2xl mx-auto mt-8">
    <input
      id="search-input"
      type="text"
      placeholder="Search posts..."
      class="w-full px-4 py-3 rounded-xl border border-border bg-background text-foreground placeholder-muted-foreground focus:outline-none focus:ring-2 focus:ring-primary focus:border-primary transition"
    />
    <div id="search-results" class="mt-6 space-y-4"></div>
  </div>

  <script src="../lib/search.ts"></script>
</Layout>
